<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/fewm"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/upper_clay"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/purple_500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/user_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/idphoto" />

            <TextView
                android:id="@+id/useremail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xyz@huntumail.com"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/uname"
                app:layout_constraintHorizontal_bias="0.518"
                app:layout_constraintStart_toStartOf="@+id/uname"
                app:layout_constraintTop_toBottomOf="@+id/uname"
                app:layout_constraintVertical_bias="0.21" />

            <TextView
                android:id="@+id/uname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:text="Huntu"
                app:layout_constraintEnd_toEndOf="@+id/user_img"
                app:layout_constraintStart_toStartOf="@+id/user_img"
                app:layout_constraintTop_toBottomOf="@+id/user_img" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/curr_designation"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:text="Open for Teamin Up!!"
            android:textColor="#00C853"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/upper_clay" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            android:elevation="60dp"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/curr_designation">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:background="#ECECED"
                android:padding="7dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="317dp">

                <TextView
                    android:id="@+id/description_para"
                    android:layout_width="match_parent"
                    android:textSize="17dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="Getting applicants to look at your company is one thing; finding the right job candidates yourself is another. Monster job ads and our variety flexible monthly plans allow you to upgrade, scale down, and cancel your position search at any time. Get started today and you can even access SearchMonster, our massive candidate engagement platform, at no extra charge, putting you in touch with the best medical coders.Getting applicants to look at your company is one thing; finding the right job candidates yourself is another. Monster job ads and our variety flexible monthly plans allow you to upgrade, scale down, and cancel your position search at any time. Get started today and you can even access SearchMonster, our massive candidate engagement platform, at no extra charge, putting you in touch with the best medical coders.Getting applicants to look at your company is one thing; finding the right job candidates yourself is another. Monster job ads and our variety flexible monthly plans allow you to upgrade, scale down, and cancel your position search at any time. Get started today and you can even access SearchMonster, our massive candidate engagement platform, at no extra charge, putting you in touch with the best medical coders.Getting applicants to look at your company is one thing; finding the right job candidates yourself is another. Monster job ads and our variety flexible monthly plans allow you to upgrade, scale down, and cancel your position search at any time. Get started today and you can even access SearchMonster, our massive candidate engagement platform, at no extra charge, putting you in touch with the best medical coders.Getting applicants to look at your company is one thing; finding the right job candidates yourself is another. Monster job ads and our variety flexible monthly plans allow you to upgrade, scale down, and cancel your position search at any time. Get started today and you can even access SearchMonster, our massive candidate engagement platform, at no extra charge, putting you in touch with the best medical coders."
                    android:textAlignment="textStart">

                </TextView>
            </ScrollView>
        </androidx.cardview.widget.CardView>


        <ImageView
            android:id="@+id/send_email"
            android:layout_width="48dp"
            android:layout_height="35dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="56dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:srcCompat="@drawable/gmail" />

        <ImageView
            android:id="@+id/like_description"
            android:layout_width="48dp"
            android:backgroundTint="@color/white"

            android:layout_height="35dp"
            android:layout_marginEnd="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/send_email"
            app:layout_constraintEnd_toStartOf="@+id/send_email"
            app:layout_constraintTop_toTopOf="@+id/send_email"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/clapping" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


